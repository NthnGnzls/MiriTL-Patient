<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p4bg">

    <include layout="@layout/ivfhomepfour"/>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout

            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="4"
           >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight=".7"
                android:weightSum="3">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.450"/>
            <ImageView
                android:layout_weight=".1"
                android:id="@+id/imgImplantation"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/implantation"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.450"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:weightSum="2"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnpfourPrevious1"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_previous"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/btnpfourPrevious2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREVIOUS PROCESS"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="4">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight=".4">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.450"/>
            <ImageView
                android:layout_weight=".1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/drb"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.450"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"

                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btnpfourNext2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="NEXT PROCESS"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>
                <ImageButton
                    android:id="@+id/btnpfourNext1"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:background="@mipmap/ic_nextp"
                    android:layout_height="25dp" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>