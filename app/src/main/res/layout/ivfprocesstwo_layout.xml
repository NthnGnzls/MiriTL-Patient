<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/p2bg">
    <include layout="@layout/ivfhomeptwo"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <ImageView
                android:layout_weight=".3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/p2sperm"
                android:id="@+id/imgEggSperm" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1.4">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"/>

                <ImageView
                    android:layout_gravity="left"
                    android:id="@+id/imgVitro"
                    android:layout_weight=".2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/invitro"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:weightSum="2"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnptwoPrevious1"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_previous"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/btnptwoPrevious2"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PREVIOUS PROCESS"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="15dp"/>

            </LinearLayout>

        </LinearLayout>



            <LinearLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="4">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.4"/>

                    <ImageView
                        android:id="@+id/imgIntra"
                        android:layout_weight=".2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/intracytoplasmic"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".3"
                    android:weightSum="3">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.450"/>
                <ImageView
                    android:layout_weight=".1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/p2egg"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.450"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.2"

                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnptwoNext2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEXT PROCESS"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="25dp"
                        android:layout_gravity="center"
                        android:background="@mipmap/ic_nextp"
                        android:layout_height="25dp"
                        android:id="@+id/btnptwoNext1"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>