<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#96c2ae"
    android:layout_height="match_parent">

    <include layout="@layout/embryoclassificationhometwo"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:weightSum="3">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.450"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight=".1"
                android:weightSum="3">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"/>
                <TextView
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:textColor="@color/white"
                    android:text="EMBRYO CLASSIFICATION"
                    android:textStyle="bold"
                    android:textSize="50dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.450"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"/>
        <LinearLayout
            android:layout_weight=".6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="5"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight=".7"
                android:weightSum="2">

                <VideoView
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/embryoVidMulti"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:layout_weight="1.8">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/ic_wrong"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multinuclation"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight=".7"
                android:weightSum="2">
                <VideoView
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/embryoVid2Normal"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:layout_weight="1.8">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/ic_correct"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"/>

        </LinearLayout>/

        <LinearLayout

            android:layout_gravity="left"
            android:layout_weight="1.2"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:weightSum="2"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnECBack2"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_previous"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/btnECBack1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>